<%- include('header') -%>
<script type="text/javascript">
    ticketPrice = <%= berlin.price %>;
</script>
<h1>Detalle de la ANP</h1>

<div class="container">
    <div class="column">
        <img src= <%= berlin.image %> />
    </div>
    <div class="column">
        <div class="subrow">
            <h2><%= berlin.name %></h2>
            <p><%= berlin.description %></p>
        </div>
        <div class="subrow">
            <form method="post" action="/berlin/ticket">
                <div class="column">
                    <p>Precio Unitario: S/<span id="price"> <%= berlin.price %></span>.00</p>
                    <label>Cantidad: </label>
                    <input type="number" name="quantity" aria-labelledby="quantity" id="quantity" min="1">
                    <p> Importe total: S/<span id="result"></span>.00</p>
                </div>
                <div class="column">
                    <label>Email de confirmaci√≥n:</label>
                    <input type="text" name="email" id="email">
                </div>
                <input type="submit" value="Submit">
            </form>
        </div>
    </div>
</div>

<%- include('footer') -%>